<div class="row">
    <div class="col-md-1"></div>
    <!-- Burger(s) In Cue For Consumption -->
    <div class="col-md-5">
        <h4 class="headline">Order Up!</h4>
        <div>
            {{#each burgers}}
                {{#unless devoured}}
                    <form action="burger/eat/{{id}}" method="POST">
                        <div class="input-group">
                            <li class="form-control">{{id}}. {{burger_name}}</li>
                            <span class="input-group-btn">
                  <button class="btn btn-warning devour-button" type="submit">Devour It!</button>
                </span>
                        </div>
                    </form>
                {{/unless}}
            {{/each}}

        </div>
    </div>
    <div class="col-md-1"></div>
    <!--Devoured Burger(s)-->
    <div class="col-md-5">
        <h4 class="headline">Fond Memories...</h4>
        <div>
            {{#each burgers}}
                {{#if this.devoured}}
                    <div class="input-group">
                        <li class="form-control">{{this.id}}. {{this.burger_name}}</li>
                    </div>
                {{/if}}
            {{/each}}

        </div>
    </div>
</div>